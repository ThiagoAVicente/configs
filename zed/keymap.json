// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "ctrl ctrl": "project_panel::ToggleFocus",
      "ctrl รง": "workspace::ToggleRightDock",
      "alt-f": "outline_panel::ToggleFocus"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle",
      "ctrl-k": "terminal_panel::ToggleFocus",
      "ctrl-enter": "project_panel::Open",
      "ctrl-r": ["task::Spawn", { "task_name": "run file" }],
      "ctrl-alt-w": "pane::CloseInactiveItems"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": [2"workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "ctrl-'": "go_to_line::Toggle",
      "ctrl-u": "editor::FindAllReferences",
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-n": "pane::ActivateNextItem",
      "ctrl-p": "pane::ActivatePreviousItem",
      "ctrl-y": "terminal_panel::ToggleFocus",
      "alt-right": "editor::MoveToEndOfLine",
      "alt-left": "editor::MoveToBeginningOfLine",
      "alt-escape": "editor::MoveToBeginning",
      "alt-delete": "editor::MoveToEnd"
    }
  },
  {
  "context": "Editor && showing_completions",
  "bindings": {
    "ctrl-tab":"editor::ComposeCompletion",
  }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-y": "terminal_panel::ToggleFocus"
    }
  }
]
