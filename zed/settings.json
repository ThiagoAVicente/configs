{
  "tab_bar": {
    "show": true
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "project_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right",
    "auto_reveal_entries": true
  },
  "autosave": {
    "after_delay": { "milliseconds": 1500 }
  },
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 80,

  "vim_mode": false,
  "ui_font_size": 14,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Frapp√© (Blur)",
    "dark": "Catppuccin Macchiato (Blue Blur+)"
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": { "file_icons": true },

  "experimental.theme_overrides": {
    //"background.appearance": "blurred",
  },
  "language_models": {
    "copilot_chat": {}
  },
  "languages": {
    "Markdown": {
      "format_on_save": "on"
    },
    "Java": {
      "format_on_save": "off"
    }
  },

  "lsp": {
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true
          },
          "forwardSearch": {
            "executable": "zathura",
            "args": [
              "--synctex-forward",
              "%l:1:%f",
              "-x",
              "zed %%{input}:%%{line}",
              "%p"
            ]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "basic"
        },
        "python": {
          "pythonPath": "venv/bin/python"
        }
      }
    }
  }
}
